---
import type { Props as AstroProps } from 'astro';

interface Props extends AstroProps {
  title?: string;
  description?: string;
}

const { title, description } = Astro.props as Props;
const siteTitle = "Local Love Hub: Support Your Community";
---

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="description" content={description}>
	<meta name="author" content={"Local Love Hub"}>
	<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	<meta name="generator" content={Astro.generator} />
	<title>{Astro.props.title || `${siteTitle}`}</title>
</head>
<body class="bg-background text-text">
  <div class="container mx-auto px-4 py-8 min-h-screen flex flex-col">
    <header class="mb-8">
      <nav class="flex items-center justify-between">
        <a href="/" class="text-2xl font-bold text-primary hover:text-secondary transition-colors">{siteTitle}</a>
        <ul class="flex space-x-4">
          <li><a href="/" class="hover:text-primary transition-colors">Home</a></li>
          <li><a href="/blog" class="hover:text-primary transition-colors">Blog</a></li>
        </ul>
      </nav>
    </header>
    <main class="flex-grow">
      <slot />
    </main>
    <footer class="mt-8 py-4 text-center border-t border-gray-300">
      Â© {new Date().getFullYear()} {siteTitle}
    </footer>
  </div>
</body>
</html>
