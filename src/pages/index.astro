---
import Layout from "../layouts/Layout.astro";

const siteTitle = "Local Love Hub: Support Your Community";
const siteDescription = "Discover local hidden gems & support neighborhood businesses. Real reviews, exclusive deals, & community events, all in one place!";
---

<Layout title={siteTitle} description={siteDescription}>
	<main class="space-y-6">
		<section class="hero text-center">
			<h1 class="text-4xl font-bold text-primary mb-4">{siteTitle}</h1>
			<p class="text-lg text-gray-700 mb-8">{siteDescription}</p>
			<img src="https://placehold.co/800x400.png" alt="A placeholder image" data-ai-hint="city map" class="rounded-lg shadow-md mx-auto"/>
		</section>

		<section class="featured-businesses">
			<h2 class="text-2xl font-semibold text-secondary mb-4">Featured Local Businesses</h2>
			<p class="text-gray-600">Discover amazing businesses right in your neighborhood. Explore their profiles, read reviews, and find exclusive deals.</p>
			<img src="https://placehold.co/600x300.png" alt="Placeholder of local business" data-ai-hint="storefront" class="rounded-lg shadow-md mx-auto"/>
		</section>

		<section class="upcoming-events">
			<h2 class="text-2xl font-semibold text-secondary mb-4">Upcoming Community Events</h2>
			<p class="text-gray-600">Stay connected with local events happening in your community. From farmers markets to live music, there's always something to discover.</p>
		</section>

		<section class="search-section">
			<h2 class="text-2xl font-semibold text-secondary mb-4">Search for Local Gems</h2>
			<input type="text" placeholder="Search for businesses, events, and more..." class="w-full px-4 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring-2 focus:ring-primary"/>
		</section>
	</main>
</Layout>
